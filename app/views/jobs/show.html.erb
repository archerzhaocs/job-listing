<div class="col-md-12">
  <div class="jobs">
    <%= link_to("Add a resume", new_job_resume_path(@job), class: "btn btn-default pull-right")%>
  </div>
  <h2><%= @job.title %></h2>
  <p><%= simple_format(@job.description) %></p>

  <table class="table">
    <thead>
      <tr>
        <th>内容</th>
        <th>下载链接</th>
      </tr>
    </thead>
    <tbody>
      <% @resumes.each do |resume| %>
        <tr>
          <td><%= resume.content %></td>
          <td><%= link_to("下载简历", resume.attachment_url)%> </td>
          <td><%= button_to "Delete", job_resume_path(resume.job, resume), method: :delete, class: "btn btn-danger", confirm: "Are you sure to delete?" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
